<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsAppWithNavigation" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_1</item>
        <item name="colorPrimaryVariant">@color/color_5</item>
        <item name="colorOnPrimary">@color/color_3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_2</item>
        <item name="colorSecondaryVariant">@color/color_4</item>
        <item name="colorOnSecondary">@color/color_3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NewsAppWithNavigation.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewsAppWithNavigation.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewsAppWithNavigation.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>